{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm run build"
    },
    "deploy": {
        "startCommand": "cd server && npm start",
        "healthcheckPath": "/api/auth",
        "healthcheckTimeout": 100,
        "restartPolicyType": "ON_FAILURE"
    }
}
